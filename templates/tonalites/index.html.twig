{% extends 'base.html.twig' %}

{% block title %}{{ settings.siteName }} - {{ tonalitesPage.title }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col">
                <h1 class="text-center fw-bold border rounded bg-dark text-white p-3">{{ tonalitesPage.title }}</h1>
                {% if tonalitesPage.subtitle %}
                    <h2 class="h5 text-center fw-bold my-4">{{ tonalitesPage.subtitle }}</h2>
                {% endif %}
                {% if tonalitesPage.content %}
                    <div class="my-4">{{ tonalitesPage.content|replace({'<div>': '', '</div>': '',})|raw|nl2br }}</div>
                {% endif %}
                <div class="row row-cols-1 row-cols-md-5 g-4 mt-3 mb-5">
                    {% for tonalite in tonalites %}
                        <div class="col">
                            <a class="text-decoration-none" href="{{ path('app_tonalite_show', {'slug': tonalite.slug}) }}">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h2 class="card-title h1 fw-bold text-center">{{ tonalite.title }}</h2>
                                    </div>
                                </div>
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
