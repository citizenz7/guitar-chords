{% extends 'base.html.twig' %}

{% block title %}{{ apropos.title }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col">
                <h1 class="text-center fw-bold border rounded bg-dark text-white p-3">{{ apropos.title }}</h1>
                <div class="row my-5">
                    <div class="col text-center">
                        <img src="{{ asset('uploads/img/pages/' ~ apropos.image) }}" class="img-fluid" style="width: 100%; max-height: 300px; object-fit: cover;" alt="{{ apropos.title }}">
                    </div>
                </div>
                <div class="row my-3">
                    <div class="col text-center">
                        {{ apropos.content|replace({'<div>': '', '</div>': '',})|raw|nl2br }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
