{% extends 'base.html.twig' %}

{# {% block title %}Chord index{% endblock %} #}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col">
                <h1 class="text-center fw-bold border rounded bg-dark text-white p-3">{{ chordsPage.title }} ({{ totalChords|length }})</h1>
                <div class="row row-cols-1 row-cols-md-6 g-4 mt-3">
                {% for chord in chords %}
                    <div class="col">
                        <a class="text-decoration-none" href="{{ path('app_chord_show', {'slug': chord.slug}) }}">
                            <div class="card h-100">
                                <img src="{{ asset('uploads/img/chords/' ~ chord.image) }}" width="250px" class="img-fluid d-block mx-auto" alt="{{ chord.title }}">
                                <div class="card-body">
                                    <h2 class="card-title h5 fw-bold text-center">{{ chord.title }}</h2>
                                </div>
                            </div>
                        </a>
                    </div>
                {% endfor %}
            </div>
            </div>
        </div>

        <div class="row mt-5">
            <div class="col">
                <div class="d-flex justify-content-center">
                    {{ knp_pagination_render(chords) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
